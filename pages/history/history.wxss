/* pages/history/history.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

/* 底部商品列表 */

.footgoodslist {
  width: 100%;
  padding-top: 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
}

.footgoodslist .footgoods {
  float: left;
  display: flex;
  flex-direction: column;
  width: 370rpx;
  height: 540rpx;
  font-size: 28rpx;
  text-align: left;
  /* border-right: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8; */
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.footgoodslist .footgoods:nth-child(even) {
  margin-right: 0rpx;
}

.footgoodslist .footgoods image {
  width: 370rpx;
  height: 350rpx;
  /* margin-top: 40rpx;
  margin-left: 12rpx; */
  margin-bottom: 20rpx;
}

.footgoodslist .footgoods .text1 {
  display: block;
  width: 100%;
  height: 76rpx;
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.footgoodslist .footgoods .text2 {
  text-align: right;
  font-size: 23rpx;
  color: #999;
  margin-top: 20rpx;
  margin-right: 30rpx;
}

.footgoodslist .footgoods .text3 {
  text-align: right;
  font-size: 23rpx;
  color: #fc4d64;
  margin-right: 30rpx;

}

.footgoodslist .footgoods .text4 {
  float: left;
  text-align: left;
  font-size: 23rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 清空足迹 */
.remove {
  position: fixed;
  right: 30rpx;
  bottom: 200rpx;
  width: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
  color:#fff;
  text-align: center;
  line-height: 30rpx;
  background-color: red;
  opacity: 0.8;
  border-radius: 50%;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
