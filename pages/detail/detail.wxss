/* pages/detail/detail.wxss */

page {
  padding-bottom: 100rpx;
}
/* 分享就赚 */
.share {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  font-size: 26rpx;
  color: #fff;
  bottom: 230rpx;
  right: 20rpx;
  line-height: 30rpx;
  padding:20rpx;
  border-radius: 50%;
  box-sizing: border-box;
  background-color: #fc4d64;
  z-index: 10;
}

.topicon {
  width: 100%;
  height: 73rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.topicon image  {
  width: 45rpx;
  height: 40rpx;
}

.topicon .left-icon {
  float: left;
  margin-left: 50rpx;
}

.topicon .right-icon {
  float: right;
  margin-right: 50rpx;
}
.swiper {
  margin-bottom: 52rpx;
}
.swiper image {
   width:262rpx;
   height:262rpx;
}

.tradename {
  width: 400rpx;
  font-size: 30rpx;
  color: #606060;
  text-align: center;
  margin-bottom: 24rpx;
}

.price {
  font-size: 34rpx;
  color: #606060;
  margin-bottom: 22rpx;
}

.shopcar {
  position: relative;
  width:436rpx;
  height:70rpx;
  background-color: #fc4d64;
  color: #fff;
  font-size: 28rpx;
  margin-bottom: 25rpx;
  border-radius: 35rpx;
}

.shopcar view {
  width: 50%;
  float: left;
  text-align: center;
  line-height: 70rpx;
}

.address {
  width: 100%;
  height: 20rpx;
  padding-left: 50rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.address .send {
  float: left;
  font-size: 23rpx;
  color: #606060;
}

.address .save {
  float: right;
  font-size: 23rpx;
  margin-right: 40rpx;
  color: #606060;
}

.address .place {
  float: right;
  font-size: 23rpx;
  margin-right: 46rpx;
  color: #606060;
}

.cut-line {
  width:100%;
  height: 17rpx;
  background-color: #f7f7f7;
}

.tapBar {
  width:100%;
  height: 57rpx;
  margin-bottom: 35rpx;
}

.tapBar view {
  float: left;
  /* width:33.33333333%; */
  width:100%;
  height:100%;
  text-align: center;
  line-height: 57rpx;
  color: #606060;
  font-size: 28rpx;
}

.comment {
  width:100%;
  padding-left: 60rpx;
}

.comment image {
  float: left;
  width: 82rpx;
  height:82rpx;
}
.name-talk {
  padding-left: 100rpx;
  padding-right: 80rpx;
  box-sizing: border-box;
}
.comment .username {
  font-size: 20rpx;
  color: #fc4d64;
  margin-bottom: 20rpx;
}

.comment .content {
  font-size: 25rpx;
  color: #606060;
}

.shuxian {
  position: absolute;
  width: 2rpx;
  height: 46rpx;
  left: 50%;
  top: 50%;
  margin-left: -1rpx;
  margin-top: -23rpx;
  background-color: #fa95fa;
}

.tapBar .is_checked {
  color: #fc4d64;
}

.xuzhi {
  width: 100%;
  padding: 30rpx 20rpx;
  padding-top: 0;
  box-sizing: border-box;
}

.xuzhi view text {
  display: block;
  font-size: 25rpx;
  color: #333;
  line-height: 50rpx;
}

.xuzhi view text.red {
  color: #fc4d64;
}

.xuzhi view text.float {
  float: left;
  width: 5rpx;
  height: 5rpx;
  background-color: #333;
  border-radius: 50%;
  margin-top: 25rpx;
}

.xuzhi view text.float2 {
  float: left;
  margin-left: 20rpx;
}

.selectnum {
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  background-color: #f7f7f7;
}

.selectnum image {
  float: left;
  width: 45rpx;
  height: 43rpx;
  margin: 28rpx 20rpx;
}

.selectnum .numbtn {
  float: left;
  width: 200rpx;
  height: 100rpx;
  margin-left: 50rpx;
  padding: 25rpx 0;
  box-sizing: border-box;
}

.selectnum .numbtn view {
  float: left;
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  text-align: center;
  line-height: 50rpx;
  color: #fff;
  border-radius: 50%;
  background-color: #666;
}

.selectnum .numbtn view.num {
  border-radius: 0;
  background-color: #f7f7f7;
  color: #333;
}

.selectnum .ok {
  float: right;
  width: 200rpx;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  background-color: #fc4d64;
}

.heji {
  float: right;
  width: 216rpx;
  text-align: left;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #fc4d64;
}

/* 详情页 */

.xiangqing {
  width: 100%;
}

.xiangqing image {
  width: 750rpx；
}
.gotohome{
  position: fixed;
  width: 130rpx;
  height: 50rpx;
  top:  50rpx;
  left: 50rpx;
  font-size: 30rpx;
  color:#fff;
  text-align: center;
  line-height: 50rpx;
  background-color: #000;
  opacity: 0.5;
  border-radius: 25rpx;
}


