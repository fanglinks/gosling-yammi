/* pages/set-personal-info/info.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
  font-size: 30rpx;
}

form {
  width: 100%;
}

.container {
  width: 100%;
}

.container view {
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 100rpx;
  background-color: #fff;
}
.top {
  margin-top: 20rpx;
}

.top image {
  float: right;
  width: 80rpx;
  height: 80rpx;
  margin-top: 10rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  box-sizing: border-box;
}

.text1 {
  color: #333;
}

.text2 {
  float: right;
  color: #999;
  margin-right: 20rpx;
}

.text3 {
  float: right;
  color: #999;
}

input {
  float: right;
  width: 200rpx;
  height: 30rpx;
  font-size: 30rpx;
  color: #999;
  margin-top: 35rpx;
  text-align: right;
  margin-right: 20rpx;
}

.cutline {
  display: block;
  width: 710rpx;
  height: 1px;
  margin-left: 20rpx;
  background-color: #e8e8e8;
}

view.section {
  float: right;
  width: 500rpx;
  height: 100rpx;
}

picker {
  float: right;
  width: 500rpx;
  height: 100rpx;
  color: #999;
}

picker .picker {
  text-align: right;
}

button {
  width: 400rpx;
  height: 80rpx;
  font-size: 35rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  background-color: #fc4d64;
  margin-top: 30rpx;
}


contact-button {
  width: 100%;
  height: 100%;
}


