/* pages/hotel/time/time.wxss */

/* @import '../../dist/css/icon.wxss'; */
page {
  /* background-color: #2a8cef; */
  background-color: #fff;
  /* background:-webkit-gradient(linear, 0 0, 0 bottom, from(#2a8cef), to(#8A2BE2));  */
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: stretch;
  font-size: 14px;
}

.box {
  display: block;
  margin: 10px;
}

.box-flex1 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  background-color: #999; 
}

.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
  /* background-color: #999; */
}

.flex-item {
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 14.2%;
}

.flex-item1{
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 14.2%;
}

.item-content {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: #fff;
  height: 2rem;
  line-height: 2rem;
  color: #000;
}

.flex-item1 .item-content {
  background-color: #999;
}

.bk-color-day {
  background-color: #8A2BE2;
}

.item-content-current-day {
  flex-grow: 2;
}

/* 选中样式 */

.bkcolorday {
  background-color: cyan;
}

/* 选中时间样式 */
.selecttime {
  margin-left: 40rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.btn {
  width: 100%;
  height: 80rpx;
  margin-top: 30rpx
}

.btn view {
  float: left;
  width: 300rpx;
  height: 80rpx;
  background-color: #fc4d64;
  margin-left: 50rpx;
  border-radius: 10rpx;
  font-size: 35rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}