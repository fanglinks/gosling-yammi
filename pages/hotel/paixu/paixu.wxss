/* pages/hotel/paixu/paixu.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.header {
  width: 100%;
  height: 75rpx;
  padding: 15rpx 0;
  box-sizing: border-box;
  background-color: #fff;
}

.cutline {
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}

.header view {
  float: left;
  width: 25%;
  height: 100%;
  font-size: 30rpx;
  color: #666;
  text-align: center;
  box-sizing: border-box;
}

.header .border {
  border-right: 1px solid #e8e8e8;
}

.catelist {
  width: 100%;
  padding: 25rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding-bottom: 0;
  border-bottom: 1px solid #eaeaea;
}

.catelist image {
  float: left;
  width: 148rpx;
  height: 148rpx;
  margin-right: 20rpx;
}

.catelist .right {
  float: left;
  width: 542rpx;
}

.catelist .right .first {
  font-size: 28rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.catelist .right .first image {
  float: right;
  width: 35rpx;
  height: 35rpx;
  margin-right: 0;
}

.catelist .right .second {
  height: 25rpx;
  font-size: 25rpx;
  color: #999;
}

.catelist .right .second image {
  width: 154rpx;
  height: 25rpx;
}

.catelist .right .second .text1 {
  float: left;
  height: 25rpx;
  font-size: 25rpx;
  line-height: 25rpx;
  margin-left: 50rpx;
}

.catelist .right .second .text2 {
  float: right;
  height: 25rpx;
  font-size: 25rpx;
  color: #999;
  line-height: 25rpx;
}

.catelist .right .second .text3 {
  float: right;
  height: 25rpx;
  font-size: 25rpx;
  color: #fc4d64;
  line-height: 25rpx;
}

.catelist .right .third {
  font-size: 23rpx;
  color: #999;
  height: 90rpx;
  line-height: 90rpx;
}

