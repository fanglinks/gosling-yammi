/* 检索 */
.jiansuo {
  position: absolute;
  width: 710rpx;
  height: 460rpx;
  left: 20rpx;
  top: 276rpx;
  padding: 20rpx 40rpx;
  box-shadow: 0 4px 5px -3px #f7f7f7; 
  border-radius: 8rpx;
  border: 1px solid #e8e8e8;
  box-sizing: border-box;
  z-index: 10;
  background-color: #fff;
}

.jiansuo view {
  width: 630rpx;
  height: 100rpx;
  border-bottom: 1px solid #e8e8e8;
}

.jiansuo view:nth-child(3) {
  border-bottom: none;
}

.jiansuo view .first {
  float: left;
  height: 100rpx;
  font-size: 30rpx;
  color: #999999;
  line-height: 100rpx;
}

.jiansuo view input {
  float: left;
  width: 450rpx;
  height: 50rpx;
  margin-top: 28rpx;
  margin-left: 66rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #333;
}

.jiansuo view .third {
  float: right;
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  
}

.jiansuo view .second1 {
  float: left;
  width: 115rpx;
  height: 100rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 100rpx;
  margin-left: 36rpx;
  margin-right: 10rpx;
}

.jiansuo view .second2 {
  float: left;
  width: 210rpx;
  height: 100rpx;
  font-size: 20rpx;
  line-height: 20rpx;
}

.jiansuo view .second2 .ruzhu {
  display: block;
  height: 20rpx;
  margin-top: 20rpx;
  color: #999;
}

.jiansuo view .second2 .likai {
  display: block;
  height: 20rpx;
  margin-top: 20rpx;
  color: #999;
}

