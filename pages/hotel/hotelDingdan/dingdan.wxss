/* pages/hotel/hotelDingdan/dingdan.wxss */
page {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

/* 订房信息 */
.roominfo {
  width: 100%;
  height: 184rpx;
  background-color: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
}

.roominfo .first {
  width: 710rpx;
  height: 30rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 30rpx;
  margin-bottom: 30rpx;

}

.roominfo .second {
  width: 710rpx;
  height: 22rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 22rpx;
  margin-bottom: 20rpx;
}

.roominfo .second text {
  float: left;
  width: 200rpx;
}

.roominfo .third {
  height: 22rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 22rpx;
}

.roominfo .third text {
  float: left;
  margin-right: 25rpx;
}

/* 客户信息 */
.hang {
  width: 100%;
  background-color: #fff;
}

.shuru {
  width: 710rpx;
  height: 100rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #e8e8e8;
}

.shuru text {
  float: left;
  font-size: 28rpx;
  color: #333;
  line-height: 100rpx;
}

.shuru input {
  float: right;
  width: 560rpx;
  height: 28rpx;
  font-size: 28rpx;
  margin-top: 26rpx;
}

.xuzhi {
  width: 100%;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  color: #aeaeae;
  line-height: 44rpx;
  box-sizing: border-box;
}

/* 底部固定定位 */
.footfixed {
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  background-color: #fff;
}

.footfixed .price{
  float: left;
  width: 466rpx;
  height: 100%
}

.footfixed .price text {
  float: right;
  font-size: 24rpx;
  color: #fc4d64;
  line-height: 100rpx;
  margin-right: 10rpx;
}

.footfixed .price .text2 {
  color: #666;
}

.footfixed button {
  float: left;
  width: 284rpx;
  height: 100rpx;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  background-color: #fc4d64;
  border-radius: 0;
}

