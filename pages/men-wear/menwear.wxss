}

.cutline {
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}

.brand {
  float: left;
  width: 25%;
  height: 176rpx;
  border-right: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
  box-sizing: border-box;
}

.brand image {
  width: 100%;
  height: 173rpx;
}

.selection {
  width: 100%;
}

.recommend {
  width: 100%;
  padding: 0 20rpx;
