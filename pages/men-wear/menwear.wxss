page{
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

.menwear{
  width: 100%;
  height: 100%;
}

.container1 {
  width: 750rpx;
  display:flex;
  flex-direction:column;
  align-items:center;
  box-sizing:border-box;
  padding-top: 76rpx;
}

.container scroll-view {
  display: block;
  width: 100%;
  height: 74rpx;
}

.swiper image{
  width:100%;
  height:350rpx;
}

.swiper2 {
  margin-bottom: 60rpx;
}

.swiper2 swiper {
  margin: 0 auto;
}



.classify {
  position: fixed;
  top: 0;
  left: 0;
  border-bottom: 1px solid #e8e8e8;
  z-index: 20;
  background-color: #fff;
  width: 100%;
  height: 74rpx; 
  overflow:hidden;
  white-space:nowrap;
}



.topSection view {
  display: inline-block;
  height: 72rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  line-height: 72rpx;
  margin-right: 50rpx;
  font-weight: 500;
}

.topSection .select {
  color: #fc4d64;
  border-bottom: 1px solid #fc4d64;
}

.topSection view:first-child {
  margin-left: 20rpx;
}

.sousuo {
  position: relative;
}

input {
  display: block;
  width: 428rpx;
  height: 54rpx;
  margin: 10px auto;
  color: #999;
  font-size: 24rpx;
  border: 1px solid #e8e8e8;
  border-radius: 27rpx;
  padding-left: 30px;
}

.search {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 10px;
  top: 30rpx;
}

.fashion-products {
  width: 100%;
}

.title {
  height: 28rpx;
  text-align: center;
  font-size: 28rpx;
  color: #000;
  margin-bottom: 10rpx;
  margin-top: 30rpx;
}

.English {
  width: 262rpx;
  height: 22rpx;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 30rpx;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.English2 {
  width: 300rpx;
  height: 22rpx;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 30rpx;
