}

.hot .English {
  padding-left: 33rpx;
}

.hot .hotlist {
  float: left;
  width: 50%;
  height: 550rpx;
  padding-top: 25rpx;
  border-right: 1px solid #e8e8e8;
  border-bottom: 1px solid #e8e8e8;
  box-sizing: border-box;
}

.hot .hotlist image {
  width: 100%;
  height: 330rpx;
  margin-bottom: 10rpx;
}

.hot .hotlist .hotname {
  display: block;
  width: 100%;
  height:80rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  line-height: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.hot .hotlist .hotprice {
  display: block;
  width: 100%;
  font-size: 28rpx;
  color: #333;
  margin-top: 15rpx;
  text-align: center;
}

.hot .hotlist .vipprice {
  display: block;
  font-size: 28rpx;
  color: #fc4d64;
  text-align: center;
}

