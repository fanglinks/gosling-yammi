   margin-right: 20rpx;
   margin-bottom: 20rpx;
}

.fashion-products .leftimg {
  width: 298rpx;
  height: 356rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.fashion-products .rtimg {
  width: 392rpx;
