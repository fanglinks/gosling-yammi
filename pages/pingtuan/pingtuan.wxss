/* pages/pingtuan/pingtuan.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
}

scroll-view {
  width: 100%;
  height: 100%;
}

.pingtuanlist {
  float: left;
  width: 346rpx;
  height: 494rpx;
  margin-left: 20rpx; 
  margin-top: 25rpx;
  background-color: #fff;
} 

.pingtuanlist:nth-child(1) {
  margin-top: 20rpx;
}

.pingtuanlist:nth-child(2) {
  margin-top: 20rpx;
}

.pingtuanlist image {
  width: 346rpx;
  height: 346rpx;
}

.pingtuanlist .title {
  width: 100%;
  height: 30rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  line-height: 30rpx;
  margin-top: 20rpx;
}

.pingtuanlist .second {
  width: 100%;
  height: 30rpx;
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #fc4d64;
}

.pingtuanlist .second .price {
  float: left;
  margin-left: 20rpx;
}

.pingtuanlist .second .num {
  float: right;
  font-size: 22rpx;
  color: #999;
  margin-right: 20rpx;
}