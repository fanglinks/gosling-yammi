.size {
  width: 100%;
  padding-left: 20rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.size .title {  
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.size .sml {
  width: 100%;
