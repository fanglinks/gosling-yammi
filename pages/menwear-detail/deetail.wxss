/* 固定定位 */

.footfixed {
  position: fixed;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  padding-left: 20rpx;
  box-sizing: border-box;
  background-color: #f7f7f7;
} 

.footfixed .left {
  float: left;
  width: 80rpx;
  height: 100rpx;
  font-size: 20rpx;
  color: #a9a9a9;
  text-align: center;
  padding-top: 10rpx;
  margin-right: 20rpx;
  box-sizing: border-box;
}

.footfixed .left image {
  width: 48rpx;
  height: 48rpx;
}

.footfixed .gouwuche {
  float: right;
  width: 45rpx;
  height: 43rpx;
  margin-right: 20rpx;
  margin-top: 28rpx;
}

.footfixed .left .enterstore {
  display: block;
  width: 100%;
  color: #333;
}

.footfixed .buy {
  position: relative;
  float: right;
  width: 320rpx;
  height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin-top: 15rpx;
  margin-right: 20rpx;
  background-color: #fc4d64;
}

.footfixed .buy text {
  position: absolute;
  font-size: 30rpx;
  color: #fff;
  left: 168rpx;
}

.footfixed .buy view {
  float: left;
  width: 150rpx;
  font-size: 26rpx;
  color: #fff;
}

.footfixed .buy .cart {
  text-align: right;
  margin-left: 10rpx;
}

