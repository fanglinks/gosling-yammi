    width: 640rpx;
    height: 50rpx;
    font-size: 24rpx;
    border: 2rpx solid #e8e8e8;
    border-radius: 27rpx;
    background: #ffffff;
    color: #999999;
     margin: 25rpx;
     padding-left: 58rpx;
}
.food_search .img_search{
    width: 25rpx;
    height: 25rpx;
    position: fixed;
    left: 45rpx;
    top: 42rpx;
}


