.food_tab{
    position: fixed;
    top: 91rpx;
    left: 0;
    display: flex;
    width: 100%;
    background: #f7f7f7;
    padding: 10rpx 0;
     border-bottom:1rpx solid #dddddd; 
    z-index: 1;
}
