    width: 33.33%;
    height: 80rpx;
    line-height: 70rpx; 
    text-align: center;
    font-family: PingFang-SC-Medium;
    color: #666;
    font-size: 28rpx;
    border-right:1px solid #dddddd;
}

.red_color{
  color: #fc4d64;
}

.food_tab image{
    width: 15rpx;
    height: 15rpx;
    margin-left: 20rpx;
}

.food_tab .all_tab .rotate{
    transform: rotate(90deg);
}
