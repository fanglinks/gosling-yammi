/* pages/related-businesses/relevance.wxss */
.topline {
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}

.relevance-list {
  width: 710rpx;
  height: 248rpx;
  margin: 20rpx 20rpx 0 20rpx;
  box-shadow: 6rpx 6rpx 6rpx #e8e8e8;
  border: 1px solid #e8e8e8;
  border-radius: 8rpx;
}

.relevance-list .leftimg {
  float: left;
  width: 265rpx;
  height: 248rpx;
  margin: 0 20rpx 0 0;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.relevance-list .right {
  width: 425rpx;
  float: left;
}

.relevance-list .first {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #333;
  margin-top: 8rpx;
}

.relevance-list .first .title {
  float: left;
  width: 280rpx;
}

.relevance-list .first .time {
  float: right;
  font-size: 20rpx;
  color: #999;  
  margin-right: 20rpx;
}

.relevance-list .second {
  width: 100%;  
  height: 60rpx;
  font-size: 25rpx;
  margin-top: 8rpx;
  color: #999;
}

.relevance-list .third {
  width: 100%;  
  height: 25rpx;
  font-size: 25rpx;
  margin-top: 14rpx;
  color: #999;
}

.relevance-list .fourth {
  width: 100%;
  height: 25rpx;
  margin-top: 30rpx;
}

.relevance-list .fourth image {
  float: left;
  width: 152rpx;
  height: 25rpx;
}

.relevance-list .fourth .yongjin {
  float: right;
  font-size: 25rpx;
  color: #999;
  margin-right: 20rpx;
}

/* 关联商户为空显示 */
.isempty {
  font-size: 30rpx;
  color: #999;
  margin-top: 400rpx;
  text-align: center;
  font-weight: 500;
}